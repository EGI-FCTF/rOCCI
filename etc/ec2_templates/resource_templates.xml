<?xml version="1.0" encoding="utf-8"?>
<occi_ec2_resource_template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="occi_ec2_resource_template.xsd">

<!-- Standard Instances -->
	<instance>
		<title>Small Instance</title>
		<term>m1.small</term>
		<memory>1.7</memory>
		<compute cores="1" description='1 virtual core with 1 EC2 Compute Unit'>1</compute>
		<storage>160</storage>
		<architecture>32</architecture>
		<ioperformance>moderate</ioperformance>
	</instance>
	<instance>
		<title>Large Instance</title>
		<term>m1.large</term>
		<memory>7.5</memory>
		<compute cores="2" description='2 virtual cores with 2 EC2 Compute Units each'>4</compute>
		<storage>850</storage>
		<architecture>64</architecture>
		<ioperformance>high</ioperformance>
	</instance>
	<instance>
		<title>Extra Large Instance</title>
		<term>m1.xlarge</term>
		<memory>15</memory>
		<compute cores="4" description='4 virtual cores with 2 EC2 Compute Units each'>8</compute>
		<storage>1690</storage>
		<architecture>64</architecture>
		<ioperformance>high</ioperformance>
	</instance>

<!-- Micro Instances -->
	<instance>
		<title>Micro Instance</title>
		<term>t1.micro</term>
		<memory>0.613</memory>
		<compute cores="1" description='Up to 2 EC2 Compute Units (for short periodic bursts)'>variable</compute>
		<architecture>32</architecture>
		<ioperformance>low</ioperformance>
	</instance>

<!-- High-Memory Instances -->
	<instance>
		<title>High-Memory Extra Large Instance</title>
		<term>m2.xlarge</term>
		<memory>17.1</memory>
		<compute cores="2" description='2 virtual cores with 3.25 EC2 Compute Units each'>6.5</compute>
		<storage>420</storage>
		<architecture>64</architecture>
		<ioperformance>moderate</ioperformance>
	</instance>
	<instance>
		<title>High-Memory Double Extra Large Instance</title>
		<term>m2.2xlarge</term>
		<memory>34.2</memory>
		<compute cores="4" description='4 virtual cores with 3.25 EC2 Compute Units each'>13</compute>
		<storage>850</storage>
		<architecture>64</architecture>
		<ioperformance>High</ioperformance>
	</instance>
	<instance>
		<title>High-Memory Quadruple Extra Large Instance</title>
		<term>m2.4xlarge</term>
		<memory>68.4</memory>
		<compute cores="8" description='8 virtual cores with 3.25 EC2 Compute Units each'>26</compute>
		<storage>1690</storage>
		<architecture>64</architecture>
		<ioperformance>High</ioperformance>
	</instance>

<!-- High-CPU Instances -->
	<instance>
		<title>High-CPU Medium Instance</title>
		<term>c1.medium</term>
		<memory>1.7</memory>
		<compute cores="2" description='2 virtual cores with 2.5 EC2 Compute Units each'>5</compute>
		<storage>350</storage>
		<architecture>32</architecture>
		<ioperformance>moderate</ioperformance>
	</instance>
	<instance>
		<title>High-CPU Extra Large Instance</title>
		<term>c1.xlarge</term>
		<memory>7</memory>
		<compute cores="8" description='8 virtual cores with 2.5 EC2 Compute Units each'>20</compute>
		<storage>1690</storage>
		<architecture>64</architecture>
		<ioperformance>high</ioperformance>
	</instance>

<!-- Cluster Compute Instances -->
	<instance>
		<title>Cluster Compute Quadruple Extra Large Instance</title>
		<term>cc1.4xlarge</term>
		<memory>23</memory>
		<compute cores="8" description='2 x Intel Xeon X5570, quad-core "Nehalem" architecture'>33.5</compute>
		<storage>1690</storage>
		<architecture>64</architecture>
		<ioperformance>very high</ioperformance>
	</instance>
	<instance>
		<title>Cluster Compute Eight Extra Large Instance</title>
		<term>cc2.8xlarge</term>
		<memory>60.5</memory>
		<compute cores="16" description='eight-core 2 x Intel Xeon'>88</compute>
		<storage>3370</storage>
		<architecture>64</architecture>
		<ioperformance>very high</ioperformance>
	</instance>

<!-- Cluster GPU Instances -->
	<instance>
		<title>Cluster GPU Quadruple Extra Large Instance</title>
		<term>cg1.4xlarge</term>
		<memory>22</memory>
		<compute cores="16" type='(2 x Intel Xeon X5570, quad-core "Nehalem" architecture'>33.5</compute>
		<gpu count="2">NVIDIA Tesla "Fermi" M2050 GPUs</gpu>
		<storage>1690</storage>
		<architecture>64</architecture>
		<ioperformance>very high</ioperformance>
	</instance>

</occi_ec2_resource_template>
