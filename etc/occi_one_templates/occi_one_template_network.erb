OCCI_ID         = <%= network.attributes["occi.core.id"]%>
NAME            = "<%= network.attributes["occi.core.title"]%>"
DESCRIPTION     = "<%= network.attributes['occi.core.summary']		if network.attributes['occi.core.summary']%>"
VLAN_ID         = <%= network.attributes['occi.network.vlan'] 		if network.attributes['occi.network.vlan']%>
BRIDGE          = virbr0
# PUBLIC          = <%= network.attributes['opennebula.network.public'].upcase if network.attributes['opennebula.network.public']%>

<% if network.attributes['occi.network.allocation'] == 'static' %>
TYPE            = FIXED
<% else %>
TYPE            = RANGED
<% end %>

NETWORK_ADDRESS = <%= network.attributes['occi.network.address'].sub('"','').split('/')[0] 					if network.attributes['occi.network.address']%>
NETWORK_SIZE    = <%= 2**(32-network.attributes['occi.network.address'].sub('"','').split('/')[1].to_i)  	if network.attributes['occi.network.address']%>

<% network.attributes['opennebula.network.leases'].each do |lease| %>
LEASES          = [ <%= lease %> ]
<% end if network.attributes['opennebula.network.leases'] %>