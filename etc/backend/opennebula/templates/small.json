{
    "mixins":[
        {
            "term":"small",
            "scheme":"/occi/templates#",
            "title":"Small Instance",
            "attributes":{
                "occi":{
                    "compute":{
                        "architecture":{
                            "mutable":true,
                            "required":false,
                            "type":"string",
                            "pattern":"x86|x64",
                            "default":"x86"
                        },
                        "cores":{
                            "mutable":false,
                            "type":"number",
                            "default":1
                        },
                        "speed":{
                            "mutable":false,
                            "type":"number",
                            "default":1
                        },
                        "memory":{
                            "mutable":false,
                            "type":"number",
                            "default":1.7
                        }
                    },
                    "storage":{
                        "size":{
                            "mutable":false,
                            "type":"number",
                            "default":160
                        }
                    }
                }
            }
        }
    ]
}